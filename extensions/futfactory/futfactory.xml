<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5" method="upgrade">
    <name>FutFactory</name>
    <creationDate>April 2012</creationDate>
    <author>IT&amp;L@bs</author>
    <authorEmail>csicard.ext@orange.com</authorEmail>
    <authorUrl>http://www.itlabs.fr.orange-business.com/</authorUrl>
    <copyright>Copyright (C) 2012 Orange. All rights reserved.</copyright>
    <license></license>
    <version>1.0.0-000</version>
    <revision></revision>
    <description></description>

    <installfile>install.futfactory.php</installfile>
    <uninstallfile>uninstall.futfactory.php</uninstallfile>

    <files folder="front">
        <filename>index.html</filename>
        <filename>futfactory.php</filename>
        <folder>controllers</folder>
        <folder>views</folder>
    </files>

    <languages folder="front/languages">
        <language tag="fr-FR">fr-FR/fr-FR.com_futfactory.ini</language>
    </languages>
   
    <administration>
        <menu img="components/com_futfactory/images/futfactory-icon.png" link="option=com_futfactory">COM_FUTFACTORY</menu>
        <submenu>
            <menu img="components/com_futfactory/images/process.png" link="option=com_futfactory&amp;task=cpanel">CPANEL</menu>
        </submenu>

        <files folder="admin">
            <folder>images</folder>
        </files>

        <languages folder="admin/languages">
            <language tag="fr-FR">fr-FR/fr-FR.com_futfactory.ini</language>
        </languages>
    </administration>
</install>